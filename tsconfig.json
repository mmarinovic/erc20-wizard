{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "sourceMap": false,
      "declaration": true,
      "rootDir": "./src/",
      "outDir": "./lib/",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "lib"
    ]
}